{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "version": "1.5.8.1",
  "description": "__MSG_extensionDescription__",
  "homepage_url": "https://www.aprelendo.com",
  "icons": {
      "16": "icons/aprelendo16.png",
      "32": "icons/aprelendo32.png",
      "48": "icons/aprelendo48.png",
      "96": "icons/aprelendo96.png"
  },
  
  "browser_specific_settings": {
    "gecko": {
      "id": "{d89b9665-3b30-4586-9bff-7b9aeea27145}"
    }
  },

  "permissions": [
	"tabs",    
	"activeTab",
    "storage",
	"contextMenus",
	"scripting"
  ],

  "browser_action": {
    "default_icon": "icons/aprelendo16.png",
    "default_title": "Add to Aprelendo",
    "default_popup": "popup/choose_lang.html"
  },
  
  "options_ui": {
    "page": "options.html"
  },

  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },

  "commands": {
    "add-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      },
      "description": "__MSG_shortcutDescription__"
    }
  },

  "default_locale": "en"

}
